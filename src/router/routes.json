{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/questions/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Question viewing is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/ask": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to ask questions",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/tags": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Tag browsing is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/users": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User list is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/users/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User profiles are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Auth callback is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}